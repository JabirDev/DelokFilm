<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DelokFilm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.JabirDev.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.JabirDev.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.JabirDev.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.JabirDev.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.JabirDev.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.JabirDev.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.JabirDev.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.JabirDev.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.JabirDev.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.JabirDev.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.JabirDev.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.JabirDev.Overline</item>

        <item name="emphasisHighAlpha">0.87</item>
        <item name="emphasisMediumAlpha">0.60</item>
        <item name="emphasisDisabledAlpha">0.38</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSurface</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">?attr/colorSurface</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.FullScreen" parent="Theme.DelokFilm">
        <item name="android:statusBarColor">@color/black_alpha_50</item>
        <item name="android:navigationBarColor">@color/black_alpha_50</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
    </style>

</resources>